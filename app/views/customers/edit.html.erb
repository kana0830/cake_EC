<h2>登録情報編集</h2>

<%= form_for(@customer) do |f| %>

<!-- エラーメッセージ表示-->
<% if @customer.errors.any? %>
	<h3><%= @customer.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @customer.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<!-- エラーメッセージ表示-->

<table>
    <thead>
      <tr>
        <td>名前</td>
        <td>
          <div class="field">
            <%= f.label :last_name, "（姓）" %>
            <%= f.text_field :last_name, autofocus: true, class: "last_name" %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.label :first_name, "（名）" %>
            <%= f.text_field :first_name, autofocus: true, class: "first_name" %>
          </div>
        </td>
      </tr>

      <tr>
        <td>フリガナ</td>
        <td>
          <div class="field">
            <%= f.label :last_name_kana, "（セイ）" %>
            <%= f.text_field :last_name_kana, autofocus: true, class: "last_name_kana" %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.label :first_name_kana, "（メイ）" %>
            <%= f.text_field :first_name_kana, autofocus: true, class: "first_name_kana" %>
          </div>
        </td>
      </tr>
    </thead>
  </table>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_number, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_number, autofocus: true, autocomplete: "postal_number" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号（ハイフンなし）" %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存する" %>
  </div>
<% end %>

<%= link_to "退会する(routing未設定)", customer_path %>