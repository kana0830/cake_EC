<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <table>
    <thead>
      <tr>
        <td>名前</td>
        <td>
          <div class="field">
            <%= f.label :last_name, "（姓）" %>
            <%= f.text_field :last_name, autofocus: true, class: "last_name" %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.label :first_name, "（名）" %>
            <%= f.text_field :first_name, autofocus: true, class: "first_name" %>
          </div>
        </td>
      </tr>

      <tr>
        <td>フリガナ</td>
        <td>
          <div class="field">
            <%= f.label :last_name_kana, "（セイ）" %>
            <%= f.text_field :last_name_kana, autofocus: true, class: "last_name_kana" %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.label :first_name_kana, "（メイ）" %>
            <%= f.text_field :first_name_kana, autofocus: true, class: "first_name_kana" %>
          </div>
        </td>
      </tr>
    </thead>
  </table>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_number, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_number, autofocus: true, autocomplete: "postal_number" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号（ハイフンなし）" %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
